# GridPane Manager Backend Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
API_KEY=your-api-key-here
ALLOWED_ORIGINS=https://your-ios-app-domain.com

# GridPane API Integration
GRIDPANE_API_KEY=your-gridpane-api-key
GRIDPANE_API_URL=https://api.gridpane.com

# SSL/TLS Configuration (for HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/gridpane-manager.crt
SSL_KEY_PATH=/etc/ssl/private/gridpane-manager.key

# Monitoring Configuration
MONITORING_INTERVAL=30000
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=90
DISK_ALERT_THRESHOLD=85

# Push Notifications
PUSH_NOTIFICATION_SERVICE=apns
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-team-id
APNS_BUNDLE_ID=com.yourcompany.gridpanemanager

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Auto-update Configuration
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=3600000
UPDATE_SOURCE=https://github.com/HollerDigital/holler-server-monitoring-agent

# Legacy Compatibility (for migration from Python version)
LEGACY_PYTHON_PORT=8847
MIGRATION_MODE=false
